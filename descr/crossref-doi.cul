plugin {
	version {1}
	name {crossref-doi}
	url {http://crossref.org/}
	blurb {}
	author {Fergus Gallagher}
	email {fergus.gallagher@citeulike.org}
	language {perl}
	regexp {http://dx\.doi\.org/.*}
}

